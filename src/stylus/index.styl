menuWidth = 220px
mainColor = #5b9fbe
secondaryColor = #84b7ce

html
   height: 100%

   body
      margin: 0
      height: 100%
      font-family: 'roboto'

.banner
   background-image: url(/img/banner.png)
   height: 70%
   color: white
   display: flex
   justify-content: center
   align-items: center
   text-align: center

.main-container
   max-width: 1000px

.main-form
   display: flex
   flex-direction: column
   align-items: flex-start

label
   margin: 10px 0

input, select
   margin: 0 10px

.site-pusher
   transform: translateX(0)
   transition: 0.3s ease-out

.menu-open
   transform: translateX(menuWidth)
   transition: 0.3s ease-out

#root
   height: 100%

   .site-container
      height: 100%

      .site-pusher
         height: 100%

header
   height: 60px
   box-shadow: 0px 1px 10px 0 grey
   background-color: mainColor
   line-height: 60px
   position: fixed
   right: 0
   left: 0

   .header-icon
      position: relative
      display: block
      float: left
      width: 50px
      height: 60px
      cursor: pointer

      &::after
         content: ''
         position: absolute
         display: block
         width: 1rem
         height: 0
         top: 15px
         left: 15px
         box-shadow: 0 10px 0 1px #fff, 0 16px 0 1px #fff, 0 22px 0 1px #fff

   .header-logo
      float: left
      padding: 5px 30px

   nav
      .log-out-button
         border-radius: 50px
         background-color: #81c784
         margin: auto
         width: menuWidth - 40px

         .log-out-button-icon
            left: 9px
            position: relative
            top: 3px

      a
         text-decoration: none
         color: #fff
         height: 50px
         display: block
         text-align: center
         line-height: 50px

         &:hover
            background-color: secondaryColor

         &:active
            background-color: #aeccda

.site-content
   padding-top: 60px
   height: 100%

.menu-open
   .site-cache
      background-color: rgba(0, 0, 0, 0.4)
      position: absolute
      left: 0
      right: 0
      top: 0
      bottom: 0

@media (max-width: 700px)
   header
      position: static

      nav
         width: menuWidth
         background-color: mainColor
         position: absolute
         left: 0
         top: 0
         bottom: 0
         transform: translateX(- menuWidth)

   .site-content
      padding-top: 0

      .banner
         font-size: 1.4em
